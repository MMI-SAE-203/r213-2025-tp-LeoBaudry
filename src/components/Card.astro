---
const { ...offre } = Astro.props;
---

<div class="p-2">
  <!-- Mode Grille (image au-dessus, texte en dessous) -->
  <div x-show="column" class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg">
    <img
      src={offre.imgUrl}
      alt={offre.nomMaison}
      class="w-full h-48 object-cover"
    />
    <ul class="bg-blue-50 p-5 rounded-lg">
      <li class="font-bold text-lg pb-5 flex items-center">
        {offre.favori && <span class="text-yellow-500 text-xl mr-2">⭐</span>}
        {offre.nomMaison}
      </li>
      <li class="text-gray-700 pb-2">{offre.adresse}</li>
      <li class="text-green-600 font-bold">{offre.prix} €</li>
      <li class="text-gray-700">{offre.nbChambres} Chambres</li>
      <li class="text-gray-700">{offre.nbSdb} Salles de bain</li>
      <li class="text-gray-700 pt-5">{offre.surface} m²</li>
    </ul>
  </div>

  <!-- Mode Flex (image à gauche ou au-dessus, texte à droite ou en dessous) -->
  <div
    x-show="!column"
    class="flex flex-col sm:flex-row bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg h-full"
  >
    <!-- Image -->
    <div class="w-full sm:w-1/3 [1500px]:w-1/2 flex-shrink-0 sm:h-auto h-48">
      <img
        src={offre.imgUrl}
        alt={offre.nomMaison}
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Texte -->
    <div class="w-full sm:w-2/3 [1500px]:w-1/2 p-5 flex flex-col justify-between bg-blue-50">
      <ul class="space-y-2 sm:space-y-0">
        <li class="font-bold text-lg sm:text-xl md:text-2xl pb-5 flex items-center">
          {offre.favori && <span class="text-yellow-500 text-xl mr-2">⭐</span>}
          {offre.nomMaison}
        </li>
        <li class="text-gray-700 text-sm sm:text-base">{offre.adresse}</li>
        <li class="text-green-600 font-bold text-sm sm:text-base">{offre.prix} €</li>
        <li class="text-gray-700 text-sm sm:text-base">{offre.nbChambres} Chambres</li>
        <li class="text-gray-700 text-sm sm:text-base">{offre.nbSdb} Salles de bain</li>
        <li class="text-gray-700 pt-5 text-sm sm:text-base">{offre.surface} m²</li>
      </ul>
    </div>
  </div>
</div>