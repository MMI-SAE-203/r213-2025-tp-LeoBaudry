---
import { getAgentById } from '../../backend.mjs';
import Base from '../../layouts/Base.astro';

const { id } = Astro.params;

const agent = await getAgentById(id);
console.log("Agent", agent);

if (!agent) {
    return Astro.redirect('/agents');
}
